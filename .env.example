# ============================================
# B3 TRADING PLATFORM - ENVIRONMENT VARIABLES
# ============================================
# Copie este arquivo para .env e preencha suas credenciais
# cp .env.example .env

# ============================================
# POSTGRES (Config & Users)
# ============================================
POSTGRES_USER=b3trading_user
POSTGRES_PASSWORD=b3trading_pass
POSTGRES_DB=b3trading_db

# ============================================
# TIMESCALEDB (Market Data)
# ============================================
TIMESCALE_USER=b3trading_ts
TIMESCALE_PASSWORD=b3trading_ts_pass
TIMESCALE_DB=b3trading_market

# ============================================
# REDIS
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# METATRADER 5 (Futuros B3)
# ============================================
# Obtenha em sua corretora (XP, Clear, Modal, etc.)
MT5_LOGIN=12345678
MT5_PASSWORD=sua_senha_mt5
MT5_SERVER=XP-DEMO
# Caminho do MT5 (se usar Linux com Wine)
MT5_PATH=/home/user/.wine/drive_c/Program Files/MetaTrader 5/terminal64.exe

# ============================================
# BRAPI (Ações e Fundos)
# ============================================
# Cadastre-se em: https://brapi.dev
BRAPI_TOKEN=seu_token_brapi_aqui

# ============================================
# PROFIT CHART (Opcional - Dados Históricos)
# ============================================
# PROFIT_API_KEY=sua_api_key

# ============================================
# TRADING CONFIG
# ============================================
# Capital inicial para paper trading (R$)
INITIAL_CAPITAL=100000

# Habilitar paper trading
ENABLE_PAPER_TRADING=true

# Risco máximo por trade (%)
MAX_RISK_PER_TRADE=2.0

# ============================================
# API GATEWAY
# ============================================
JWT_SECRET=sua_chave_jwt_super_secreta_aqui
API_RATE_LIMIT=100

# ============================================
# NOTIFICATIONS (Opcional)
# ============================================
# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord
DISCORD_WEBHOOK_URL=

# ============================================
# HORÁRIOS B3
# ============================================
# Mini Índice/Dólar: 09:00 - 18:00
# Ações: 10:00 - 17:00
# After Market: 17:30 - 18:00
B3_FUTURES_OPEN=09:00
B3_FUTURES_CLOSE=18:00
B3_STOCKS_OPEN=10:00
B3_STOCKS_CLOSE=17:00
B3_TIMEZONE=America/Sao_Paulo
